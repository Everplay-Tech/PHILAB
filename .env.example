# CORS allowlist (origins only: scheme + host [+port]; paths like /philab are ignored)
# Recommended: serve the dashboard on its own origin (e.g., https://philab.technopoets.net)
# and allow only that origin to call the API.
PHILAB_CORS_ORIGINS=https://philab.technopoets.net
# Optional: also allow the main site if it will call the API from the browser.
# PHILAB_CORS_ORIGINS=https://philab.technopoets.net,https://technopoets.net
PHILAB_CORS_ALLOW_CREDENTIALS=false

# Optional audit logs (newline-delimited JSON)
# PHILAB_AUDIT_LOG=./results/audit.log
# PHILAB_PLATFORM_AUDIT_LOG=./results/platform_audit.log
# PHILAB_GEOMETRY_AUDIT_LOG=./results/geometry_audit.log

# Platform API limits (defaults shown)
PHILAB_PLATFORM_MAX_BODY_BYTES=524288
PHILAB_PLATFORM_RATE_LIMIT_UNAUTH=300
PHILAB_PLATFORM_RATE_LIMIT_AUTH=2000
PHILAB_PLATFORM_RATE_LIMIT_WINDOW=300
PHILAB_PLATFORM_BAN_THRESHOLD=25
# PHILAB_PLATFORM_BANNED_IPS=203.0.113.10,198.51.100.4

# Geometry dashboard API limits (defaults fall back to platform values where available)
PHILAB_RATE_LIMIT_UNAUTH=300
PHILAB_RATE_LIMIT_AUTH=2000
PHILAB_RATE_LIMIT_ADMIN=10000
PHILAB_RATE_LIMIT_WINDOW=300
PHILAB_GEOMETRY_BAN_THRESHOLD=25
# PHILAB_GEOMETRY_BANNED_IPS=203.0.113.10

# Public preview for the geometry dashboard API (serves mock demo runs when no API key is present)
PHILAB_GEOMETRY_PUBLIC_PREVIEW=true
